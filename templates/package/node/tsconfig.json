{
  "compilerOptions": {
    "paths": {
      "@brightsidedevelopers/name": ["node_modules/@brightsidedevelopers/name"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "@types/node"],
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
